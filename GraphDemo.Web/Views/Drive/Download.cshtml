@model GraphDemo.Web.Controllers.Google.DownloadedContent

@{
    ViewBag.Title = "Download";
}

<h2>Download</h2>

<div class="form-horizontal">
    <h4>DownloadFile</h4>
    <hr />
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">Query</div>
            <div class="col-sm-12">
                @Html.DisplayTextFor(model => model.Content)
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-md-10">
                <input type="button" class="btn btn-default" value="Show Graph" title="Show Graph" onclick="location.href='@Url.Action("Index", "Neo4j", new { query = Model.Content, limits = 1000 })'" />
            </div>
        </div>
    </div>
</div>
