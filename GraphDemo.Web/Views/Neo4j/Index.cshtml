
@{
    ViewBag.Title = "Download";
}

<script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="http://d3js.org/d3.v3.js" type="text/javascript"></script>

<form>
    <p>Find the shortest path between two cities.</p>
    <div class="well carousel-search hidden-sm">
        <div class="btn-group">
            <a id="fromCity" class="btn btn-default dropdown-toggle btn-select" data-toggle="dropdown" href="#">Select City <span class="caret"></span></a>
            <ul id="from" class="dropdown-menu"></ul>
        </div>
        <div class="btn-group">
            <a id="toCity" class="btn btn-default dropdown-toggle btn-select2" data-toggle="dropdown" href="#">Select City <span class="caret"></span></a>
            <ul id="to" class="dropdown-menu"></ul>
        </div>
        <div class="btn-group">
            <button type="button" id="btnSearch" class="btn btn-primary" onclick="SearchButton()">Search</button>
        </div>

        <div class="pull-right">
            <div class="btn-group">
                <input type="text" id="nodeText" />
            </div>

            <div class="btn-group">
                <a id="chooseRelation" class="btn btn-default dropdown-toggle btn-select2" data-toggle="dropdown" href="#">Select City <span class="caret"></span></a>
                <ul id="relation" class="dropdown-menu"></ul>
            </div>
            <div class="btn-group">
                <button type="button" id="btnInsert" class="btn btn-primary" onclick="InsertNode()">Insert Node</button>
            </div>
        </div>
    </div>
</form>

<div class="row">
    <div class="col-sm-offset-5 col-sm-2 text-center">
        <div class="btn-group">
            <label class="btn btn-default center-block"><button type="button" class="btn primary large" onclick="ShowFullGraph()">Show Full Graph</button></label>
        </div>
    </div>
</div>

<div id="graph" style="height:400px">
</div>


@Styles.Render("~/Content/css")
@Scripts.Render("~/Neo4j/Graph", "~/Scripts/DrawGraph.js")